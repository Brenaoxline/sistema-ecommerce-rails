<p id="notice"><%= notice %></p>

<h1>Imagens</h1>

<table>
  <thead>
    <tr>
      <th>Lista de imagens:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @imagems.each do |imagem| %>
      <tr>
        <td><%= imagem.imagem %></td>
        <td><%= link_to 'Mostrar imagem', imagem, class:"btn btn-default" %></td>
        <td><%= link_to 'Atualizar', edit_imagem_path(imagem), class:"btn btn-default" %></td>
        <td><%= link_to 'Excluir', imagem, method: :delete, 
        data: { confirm: 'Tem certeza que deseja excluir esta imagem?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Imagem', new_imagem_path, class:"btn btn-default" %>
