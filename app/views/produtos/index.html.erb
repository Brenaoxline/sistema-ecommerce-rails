<% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
    </div>
<% end %>

<table class="table table-bordered table-hover">
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">Lista de produtos:</h4>
    </div>
    <thead>
        <tr>
            <td>Nome</td>
            <td>Descrição</td>
            <td>Departamento</td>
            <td>Preço</td>
            <td>Quantidade</td>
            <td colspan="2">
        </tr>
    </thead>
    <tbody>
        <%= render @produtos %>
    </tbody>
</table>
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Produto mais barato:</h4>
    </div>
    <table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Nome</td>
            <td>Descrição</td>
            <td>Departamento</td>
            <td>Preço</td>
            <td>Quantidade</td>
            <td colspan="2">
        </tr>
    </thead>
    <tbody>
        <%= render @produto_com_desconto %>
    </tbody>
</table>